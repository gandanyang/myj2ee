<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>com.servlet.Main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseSuccess</servlet-name>
        <servlet-class>com.servlet.PurchaseSuccess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shoppingCar</servlet-name>
        <servlet-class>com.servlet.shoppingCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/Main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginFail</servlet-name>
        <servlet-class>com.servlet.LoginFail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginFail</servlet-name>
        <url-pattern>/LoginFail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginSuccess</servlet-name>
        <servlet-class>com.servlet.LoginSuccess</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginSuccess</servlet-name>
        <url-pattern>/LoginSuccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseSuccess</servlet-name>
        <url-pattern>/PurchaseSuccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCar</servlet-name>
        <url-pattern>/shoppingCar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
